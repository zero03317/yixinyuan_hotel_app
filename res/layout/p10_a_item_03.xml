<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
   <TableRow
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
   <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="乘客信息"
  android:textSize="18dp"
  android:layout_marginTop="10dp"
  ></TextView>
   <View
  android:layout_width="wrap_content"
  android:layout_height="1px"
  android:layout_marginTop="33px"
  android:background="#ffffff"
></View>
</TableRow>
  
  <TableRow
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_marginLeft="10dp"
  >
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="乘客姓名:"
  ></TextView>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/p10_a_lv3_t1"
  ></TextView>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="  乘客类型:"
  ></TextView>
   <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/p10_a_lv3_t2"
  ></TextView>
  </TableRow>
  
   <TableRow
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_marginLeft="10dp"
  >
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="证件类型:"
  ></TextView>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/p10_a_lv3_t3"
  ></TextView>
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text=" 证件号码:"
  ></TextView>
   <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:id="@+id/p10_a_lv3_t4"
  ></TextView>
  </TableRow>
  
</LinearLayout>
